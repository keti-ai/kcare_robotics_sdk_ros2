<?xml version="1.0" ?>
<robot name="pan_tilt" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:property name="mesh_path" value="package://kcare_description/meshes/"/>

  <xacro:common_link
    name="head_base"
    mesh_file="${mesh_path}pan_tilt/head_base.stl"
  />

  <xacro:common_link
    name="head_link1"
    mesh_file="${mesh_path}pan_tilt/head_link1.stl"
  />

  <xacro:common_link
    name="head_link2"
    mesh_file="${mesh_path}pan_tilt/head_link2.stl"
  />

  <xacro:common_link
    name="head_link3"
    mesh_file="${mesh_path}pan_tilt/head_link3.stl"
  />

  <!-- <link name="femto_base_link">
  </link> -->

  <xacro:include filename="$(find kcare_description)/robots/femto_bolt.urdf.xacro"/>


  <joint name="pantilt_fix_joint" type="fixed">
    <origin xyz="-0.094838 0.0 0.077" rpy="0 0 0"/>
    <parent link="head_base"/>
    <child link="head_link1"/>
  </joint>

  <joint name="head_rz" type="revolute">
    <origin xyz="0.028 0.0 0.0" rpy="0 0 0"/>
    <parent link="head_link1"/>
    <child link="head_link2"/>
    <axis xyz="0.0 0.0 1.0"/>
    <limit
      lower="-1.58"
      upper="1.58"
      effort="30"
      velocity="3.14" />
  </joint>

  <joint name="head_ry" type="revolute">
    <origin xyz="0.024 0.0 0.0" rpy="0 0 0"/>
    <parent link="head_link2"/>
    <child link="head_link3"/>
    <axis xyz="0.0 -1.0 0.0"/>
    <limit
      lower="-1.58"
      upper="1.58"
      effort="30"
      velocity="3.14" />
  </joint>

  <joint name="pantilt_femto_frame_joint" type="fixed">
    <origin xyz="0.0 0.0 0.055" rpy="0 0 0"/>
    <parent link="head_link3"/>
    <child link="femto_base_link"/>
  </joint>

</robot>
